@using Microsoft.AspNetCore.Identity
@inject SignInManager<identitySystem.Data.ApplicationUser> SignInManager
@inject UserManager<identitySystem.Data.ApplicationUser> UserManager

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - identitySystem</title>

    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* --- Navbar Styling --- */
        .navbar-custom {
            background: linear-gradient(90deg, #007bff, #00c6ff);
            color: #fff;
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
            position: sticky;
            top: 0;
            z-index: 1000;
            animation: fadeDown 0.8s ease;
        }

       
        .navbar-brand {
            font-size: 1.7rem;
            font-weight: 700;
            letter-spacing: 0.5px;
            color: #fff !important;
            transition: transform 0.3s ease;
        }

            .navbar-brand:hover {
                transform: scale(1.05);
            }

        .welcome-text {
            color: #fff;
            font-weight: 500;
            margin-right: 12px;
            animation: fadeSlide 1s ease;
        }

        .btn-logout {
            color: #fff;
            border: 1px solid rgba(255,255,255,0.6);
            transition: all 0.3s ease;
        }

            .btn-logout:hover {
                background-color: rgba(255,255,255,0.15);
                border-color: #fff;
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(255,255,255,0.3);
            }

        /* Logout fade animation */
        .logout-fade {
            animation: logoutFade 0.6s forwards;
        }

        body {
            background: #f8fafc;
        }

        .container-main {
            animation: contentFade 0.8s ease;
        }

    </style>

    @RenderSection("Styles", required: false)
    

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom py-3 px-4">
        <div class="container-fluid">
            <div class="d-flex align-items-center">
                @if (SignInManager.IsSignedIn(User))
                {
                    var user = UserManager.GetUserAsync(User).Result;
                    if (user != null)
                    {                    }
                    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-logout">Logout</button>
                    </form>
                }
            </div>
        </div>
    </nav>

    <div class="container container-main mt-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Smooth logout animation
        document.addEventListener("DOMContentLoaded", () => {
            const logoutForm = document.getElementById("logoutForm");
            if (logoutForm) {
                logoutForm.addEventListener("submit", e => {
                    e.preventDefault();
                    const btn = logoutForm.querySelector("button");
                    btn.classList.add("logout-fade");
                    setTimeout(() => logoutForm.submit(), 500);
                });
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
    

</body>
</html>
