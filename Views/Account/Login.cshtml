@model identitySystem.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}

@section Styles {
    <style>
                          body {
                              background: linear-gradient(120deg,#f6d365,#fda085);
                          }

                          .login-card {
                              max-width: 460px;
                              margin: 80px auto;
                              background: #fff;
                              border-radius: 16px;
                              box-shadow: 0 8px 25px rgba(0,0,0,0.1);
                              animation: popIn 0.8s ease;
                          }

                          .btn-custom:hover {
                              transform: translateY(-2px);
                              box-shadow: 0 5px 12px rgba(0,0,0,0.2);
                          }
    </style>
}

<div class="login-card p-4 p-md-5">
    <h2 class="fw-bold mb-4 text-center text-success">Login</h2>

    
    <form asp-action="Login" method="post" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger small"></span>
        </div>

        <div class="d-flex justify-content-between align-items-center">
            <button type="submit" class="btn btn-success btn-custom px-4">Login</button>
            <a asp-action="Register" class="text-decoration-none">Create new account</a>
        </div>
    </form>
    

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
